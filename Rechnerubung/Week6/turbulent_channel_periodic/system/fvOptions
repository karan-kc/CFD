// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

momentumSource
{
  type                  meanVelocityForce;
  active                yes;

  meanVelocityForceCoeffs
  {
    selectionMode       all;

    fields              (U);
    Ubar                (1.85 0 0);
    relaxation           1.0;
  }
}

