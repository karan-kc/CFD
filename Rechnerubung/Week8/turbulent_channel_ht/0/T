{
    inlet
    {
        type            zeroGradient;
    }

    outlet
    {
        type            zeroGradient;
    }

    fixedWalls-bottom
    {
        type            fixedValue;
        value           uniform 293; // 19.85 degC
    }

    fixedWalls-top
    {
        type            fixedValue;
        value           uniform 343; // 69.85 degC
    }
