#include "../config"
halfChannelLength                   #calc "0.5*$channelLength";

type                                sets;
libs                                ("libsampling.so");

writeControl                        writeTime;
interpolationScheme                 cellPoint;
setFormat                           raw;

sets
(
    wallNormal
    {
        type    lineFace;
        axis    y;
        start   ($halfChannelLength 0  0);
        end     ($halfChannelLength #calc "$delta+1"  0);
    }
);

fields          (U k R);
